name: website - staging publish
on:
  push:
    branches:
      - develop
    paths:
      - 'apps/website/**'
  pull_request:
    branches:
      - develop
    paths:
      - 'apps/website/**'
jobs:
  publish-staging:
    runs-on: ubuntu-latest
    steps:
      - name: Copy Files
        uses: actions/checkout@v3
      - name: Setup Node
        uses: actions/setup-node@v3
        with:
          node-version: 15.5.0
      - name: Print Node version
        run: node -v
      - name: Print yarn version
        run: yarn -v
      - name: Install dependencies
        run: |-
          cd apps/website
          yarn --ignore-engines
      - name: Run build
        run: |-
          cd apps/website
          yarn build
      - name: Run export
        run: |-
          cd apps/website
          yarn export
      - name: Publish
        uses: peaceiris/actions-gh-pages@v3
        with:
          deploy_key: ${{ secrets.ACTIONS_DEPLOY_KEY }}
          publish_dir: ./apps/website/out
          cname: stg.z3us.com
